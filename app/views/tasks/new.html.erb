<h1>Add a task</h1>

<form action="/tasks" method="post" class="form-inline my_form add_form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="form-control input" type="text" name="task[title]" placeholder="Task title" id="title">
  <input class="form-control input" type="text" name="task[details]" placeholder="Task details" id="details">
  <input class="btn btn-primary" type="submit" value="Add task">
</form>
